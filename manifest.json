{
  "manifest_version": 3,
  "name": "Cleany",
  "version": "1.0",
  "description": "Limpia automáticamente cookies, historial, sesiones y contraseñas al abrir Chrome",
  "permissions": [
    "browsingData",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}